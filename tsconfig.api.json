{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    // --- Change to CommonJS ---
    "module": "CommonJS",
    "moduleResolution": "Node",
    // --- End Change ---
    "esModuleInterop": true, // Keep this for compatibility with some imports
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    // --- Output settings for Vercel build ---
    "outDir": "./", // Output JS next to TS during Vercel build
    "declaration": false,
    "sourceMap": false
    // "noEmit": true // REMOVE THIS
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "api/server.ts"]
}
