{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "NodeNext", // Keep: Crucial for ESM output
    "moduleResolution": "NodeNext", // Keep: Crucial for ESM resolution
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true // Keep: Prevent local output
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "api/server.ts"]
}
