{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    // --- Keep CommonJS settings ---
    "module": "CommonJS",
    "moduleResolution": "Node",
    // --- End CommonJS settings ---
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    // --- Revert output settings ---
    "noEmit": true // Prevent tsc from outputting files
    // "outDir": "./", // REMOVE THIS
    // "declaration": false, // REMOVE THIS
    // "sourceMap": false // REMOVE THIS
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "api/server.ts"]
}
