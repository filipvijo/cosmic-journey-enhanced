{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "NodeNext", // Crucial for ESM output
    "moduleResolution": "NodeNext", // Crucial for ESM resolution
    // --- Output JS files next to TS files ---
    "outDir": "./",
    // --- Remove rootDir ---
    // "rootDir": "api",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true, // Keep source maps for debugging
    "resolveJsonModule": true
  },
  "include": ["api/**/*.ts"], // Compile only files in api folder
  "exclude": ["node_modules", "api/server.ts"] // Exclude server.ts
}
